#!/usr/local/bin/interpreter
program "while";

begin
{
        print "Enter your name >> ";
        scan $name;
        print ?sin(3.14/2.0), endl;
@again:
        $size = 2;
        alloc $b $size;
        print "Type strings:", endl;
        $i = 0;
        repeat
        {
                if $i == $size
                {
                        $size = $size * 2;
                        alloc $b $size;
                }
                print ">> " ;
                scan $b[$i];
                if $b[$i] == "exit"
                {
                        goto @exit;
                }
                inc $i;
        }
        until $b[$i - 1] == "print" or not ($i <= 5)
        print "Strings you have typed:", endl;
        $j = 0;
        while $j < $i
        {
                print $b[$j], endl;
                inc $j;
        }
        free $b;
        goto @again;
@exit:
        print "Goodbye, dear " + $name, endl;
}
end

